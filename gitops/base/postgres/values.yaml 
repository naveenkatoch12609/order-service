# gitops/base/postgres/values.yaml

auth:
  username: postgres
  database: ordersb
  existingSecret: my-db-secret
  secretKeys:
    postgresPasswordKey: postgres-password
    passwordKey: password

primary:
  resources:
    requests:
      cpu: 250m
      memory: 512Mi
    limits:
      cpu: 500m
      memory: 1Gi

metrics:
  enabled: true
